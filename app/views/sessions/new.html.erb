<div class="container">
  <br>
  <h1>Sign In</h1>

  <% if flash[:notice] %>
    <% if flash[:notice] == "You've successfully logged out." %>
    <div class="alert alert-success" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% else %>
      <div class="alert alert-danger" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% end %>
  <% end %>
  <br>
  <%= form_tag session_path do %>
    <div class="form-group col-md-6">
      <label for="name">Name</label>
      <%= text_field_tag :name, params[:name], class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <label for="password">Password</label>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= submit_tag 'Sign In', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
