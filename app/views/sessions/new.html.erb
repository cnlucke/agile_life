<div class="container">
  <h1>Log In</h1>

  <% if flash[:notice] %>
    <% if flash[:notice] == "You've successfully logged out." %>
    <div class="alert alert-success" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% else %>
      <div class="alert alert-danger" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% end %>
  <% end %>
  <%= form_tag session_path do %>
    Name: <%= text_field_tag :name, params[:name] %><br>
    Password: <%= password_field_tag :password %><br>
    <%= submit_tag 'Log In' %>
  <% end %>
</div>
