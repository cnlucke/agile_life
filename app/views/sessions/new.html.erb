  <% if flash[:notice] %>
    <% if flash[:notice] == "You've successfully logged out." %>
    <div class="alert alert-success" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% else %>
      <div class="alert alert-danger" role="alert"><strong><%= flash[:notice] %></strong></div>
    <% end %>
  <% end %>
  <br>
  <%= form_tag session_path, class: "form-signin" do %>
  <h1 class="logo">AgileLife</h1>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="inputName" class="sr-only">Name</label>
  <%= text_field_tag :name, params[:name], class: "form-control", id: 'inputName', required: "", autofocus: "", placeholder: "Name" %>
  <label for="inputPassword" class="sr-only">Password</label>
  <%= password_field_tag :password, "", class: "form-control", id: "inputPassword", placeholder: "Password", required: "" %>
  <button class="btn btn-lg btn-block btn-blue" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2018</p>
<% end %>
</div>
