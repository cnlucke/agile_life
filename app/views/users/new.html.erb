<div class="container">
  <h1>Sign Up</h1>
  <% if flash[:notice] %>
    <div class="alert alert-warning"><strong style="color: red;"><%= flash[:notice] %></strong></div>
    <% if flash[:notice] == "User already exists." %>
      <p>Would you like to <%= link_to "login", new_session_path %>?</p>
    <% end %>
  <% end %><br>

  <%= form_for @user, url: user_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit %>
  <% end %>
</div>
