<div class="container">
  <br>
  <br>
  <h1>Edit Profile</h1>

  <%= form_for @user, url: user_path(@user) do |f| %>
    <div class="form-group row">
      <%= f.label "Change Name", class: "col-sm-3 col-form-label form-control-lg" %>
      <div class="form-group row">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Change Password", class: "col-sm-3 col-form-label form-control-lg" %>
      <div class="form-group row">
        <%= f.password_field :password, class: "form-control" %>
        <small class="form-text text-muted">Optional</small>
      </div>
    </div>
    <%= f.submit 'Submit', class: "btn btn-blue" %>
    <%= link_to "Cancel", send("user_path"), class: "btn btn-danger" %>
  <% end %>

  <br>
  <br>
  <br>

  <h3>Delete Acount?</h3>
  <br>

  <form action="<%= user_path %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="submit" value="Delete Account" class="btn-outline-danger btn-lg btn">
  </form>
</div>
