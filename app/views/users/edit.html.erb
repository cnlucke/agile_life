<div class="container">
  <br>
  <h1>Edit Profile</h1>
  <br>

  <%= form_for @user, url: user_path do |f| %>
    <div class="form-group row">
      <%= f.label "Change Name", class: "col-sm-2 col-form-label" %>
      <div class="form-group row">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Change Password", class: "col-sm-2 col-form-label" %>
      <div class="form-group row">
        <%= f.password_field :password, class: "form-control" %>
        <small class="form-text text-muted">Optional</small>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Delete Account?", class: "col-sm-2 col-form-label" %>
      <div class="form-group row">
        <%= button_to "Delete Account", user_path, :method => "delete", class: "btn btn-outline-danger" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <%= link_to "Cancel", send("user_path"), class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
