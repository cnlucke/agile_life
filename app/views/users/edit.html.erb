<div class="container">
  <br>
  <h1>Edit Profile</h1>
  <br>

  <%= form_for @user, url: user_path(@user) do |f| %>
    <div class="form-group row">
      <%= f.label "Change Name", class: "col-sm-2 col-form-label" %>
      <div class="form-group row">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Change Password", class: "col-sm-2 col-form-label" %>
      <div class="form-group row">
        <%= f.password_field :password, class: "form-control" %>
        <small class="form-text text-muted">Optional</small>
      </div>
    </div>
    <%= f.submit 'Submit', class: "btn btn-primary" %>
    <%= link_to "Cancel", send("user_path"), class: "btn btn-danger" %>
  <% end %>

  <br>
  <br>
  <br>
  <br>

  <h3 class="row">Delete Acount?</h3>

  <form action="<%= user_path %>" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="form-group row">
      <input type="submit" value="Delete Account" class="btn-outline-danger btn-lg btn">
    </div>
  </form>
</div>
