<h1><%= current_user.name %></h1>
<br>
<h3>Current Groups</h3>
<ul>
  <% if current_user.groups.count == 0 %>
    <li>none</li>
  <% else %>
    <% current_user.groups.each do |group| %>
      <li><%= group.name %></li>
    <% end %>
  <% end %>
</ul>
<p><%= link_to "See All Groups", groups_path %></p>

<h3><%= link_to "My Tasks", tasks_path %></h3>

<ul>
  <% current_user.created_tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<h3><%= link_to "My Events", events_path %></h3>

<ul>
  <% current_user.created_events.each do |event| %>
    <li><%= link_to event.title, event_path(event) %></li>
  <% end %>
</ul>


<%= link_to "Logout", session_path, :method => "delete" %>
